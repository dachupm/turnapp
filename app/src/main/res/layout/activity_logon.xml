<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.darshanvineeth.turn1.LogonActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/splash_image"
                android:text="@string/logon_header"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_below="@id/textView1"
                android:src="@drawable/login_dash"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/line1"
                android:src="@drawable/splash_image"
                android:text="@string/logon_tag"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_below="@id/relativeLayout1"
            android:layout_marginTop="60dp">

            <Button
                android:id="@+id/signin_methods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="Sign In"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/signup_methods"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:text="Sign Up"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/sign_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="sans-serif-medium"
            android:text="Sign In using email"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/sign_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_email"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_rounded"
            android:fontFamily="sans-serif-medium"
            android:text="signin using phone number"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>
